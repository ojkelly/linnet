{
    "name": "linnet-packages",
    "version": "0.1.0",
    "license": "MIT",
    "author": "Owen Kelly <owen@owenkelly.com.au>",
    "description": "Create, update and manage your AWS AppSync API",
    "private": true,
    "workspaces": ["packages/cmd", "packages/lambda/**"],
    "scripts": {
        "dev": "ava-ts ./**/*.spec.ts --watch",
        "dev-aws":
            "ts-node tests/assumeRole.ts assumeRole --command 'ava-ts ./tests/**/*.spec.ts --watch'",
        "cli": "ts-node packages/cmd/src/index",
        "debug": "DEBUG='wahn:*,bunjil:*' yarn dev",
        "clean": "rimraf ./lib ./.nyc_output ./coverage",
        "build": "tsc -p tsconfig.json",
        "build:lambda":
            "yarn lambda:clean && yarn lambda:init && yarn lambda:createDirs && yarn lambda:compile && yarn lambda:copy-node-modules && yarn lambda:zip",
        "lambda:clean": "rm -rf ./.compiled/lambda",
        "lambda:createDirs":
            "mkdir -p ./.compiled/lambda/src ./.compiled/lambda/zip",
        "lambda:compile":
            "find ./packages/lambda -type d -maxdepth 1 -exec cd {} \\; -exec tsc -p ./tsconfig.json \\;",
        "lambda:init":
            "find ./src/lambda -type d -maxdepth 1 -exec cd {} \\; -exec yarn install \\;",
        "lambda:copy-node-modules":
            "ls -t .compiled/lambda/src | head -n 3 | xargs -I % cp -r ./src/lambda/%/node_modules .compiled/lambda/src/% ",
        "lambda:zip":
            "ls -t .compiled/lambda/src | head -n 3 | xargs -I '{}' bash -c 'cd .compiled/lambda/src/{} && zip -rq ../../zip/{}.zip  ./*'",
        "unit": "nyc ava",
        "check-coverage":
            "nyc check-coverage --lines 10 --functions 10 --branches 10",
        "test": "yarn unit && yarn check-coverage",
        "cov": "yarn unit && yarn html-coverage",
        "html-coverage": "nyc report --reporter=html",
        "send-coverage":
            "nyc report --reporter=lcov > coverage.lcov && codecov",
        "docs":
            "typedoc src/index.ts --excludePrivate --mode file --theme minimal --out lib/docs && opn lib/docs/index.html",
        "docs:json":
            "typedoc --mode file --json lib/docs/typedoc.json src/index.ts",
        "release-minor":
            "yarn run clean && yarn run build && standard-version --release-as minor",
        "release-patch":
            "yarn run clean && yarn run build && standard-version --release-as patch",
        "release-major":
            "yarn run clean && yarn run build && standard-version --sign --release-as major"
    },
    "dependencies": {
        "@types/aws-lambda": "^8.10.3",
        "@types/chalk": "^2.2.0",
        "@types/faker": "^4.1.2",
        "@types/fs-extra": "^5.0.2",
        "@types/graphql": "^0.13.0",
        "@types/ini": "^1.3.29",
        "@types/inquirer": "0.0.41",
        "@types/js-yaml": "^3.11.1",
        "@types/ora": "^1.3.3",
        "@types/pluralize": "0.0.28",
        "@types/promptly": "^1.1.28",
        "@types/readline-sync": "^1.4.3",
        "@types/through": "0.0.29",
        "@types/through2": "^2.0.33",
        "@types/uuid": "^3.4.3",
        "aws-lambda": "^0.1.2",
        "aws-lambda-mock-context": "^3.1.1",
        "aws-lambda-test-utils": "^1.3.0",
        "aws-sdk": "^2.235.1",
        "aws-xray-sdk-core": "^1.2.0",
        "chalk": "^2.4.1",
        "commander": "^2.15.1",
        "faker": "^4.1.0",
        "fs-extra": "^6.0.0",
        "gql-merge": "^0.0.6",
        "gql-utils": "^0.0.2",
        "graphql": "^0.13.2",
        "graphql-tools": "^3.0.0",
        "ini": "^1.3.5",
        "inquirer": "^5.2.0",
        "js-yaml": "^3.11.0",
        "listr": "^0.13.0",
        "listr-update-renderer": "^0.4.0",
        "ora": "^2.0.0",
        "pluralize": "^7.0.0",
        "prompt": "^1.0.0",
        "promptly": "^3.0.3",
        "readline-sync": "^1.4.9",
        "rxjs": "^5.5.10",
        "through": "^2.3.8",
        "through2": "^2.0.3",
        "typescript": "^2.8.1",
        "uuid": "^3.2.1"
    },
    "devDependencies": {
        "@types/aws-sdk": "^2.7.0",
        "@types/node": "^10.0.2",
        "@types/sinon": "^4.3.1",
        "ava": "^0.25.0",
        "ava-ts": "^0.24.2",
        "aws-sdk-mock": "^2.0.0",
        "gql-format": "^0.0.5",
        "sinon": "^5.0.2",
        "ts-node": "^6.0.2"
    }
}
