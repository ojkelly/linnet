{
    "compilerOptions": {
        "noImplicitAny": false,
        "strictNullChecks": false,
        "sourceMap": false,
        "strict": true,
        "moduleResolution": "node",
        "allowJs": false,
        "allowSyntheticDefaultImports": false,
        "target": "es2017",
        "module": "commonjs",
        "inlineSources": false,
        "isolatedModules": false,
        "lib": ["esnext", "dom"],
        "noEmit": false,
        "outDir": "./lib/",
        "declaration": true
    },
    "filesGlob": ["./**/*.ts"],
    "exclude": ["**/node_modules", "**/*.spec.ts", "./lib/**"]
}
